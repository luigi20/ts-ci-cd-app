{
  "compilerOptions": {
    "target": "ES2020",
    "verbatimModuleSyntax": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "isolatedModules": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts",
    "jest.config.ts"
  ]
}